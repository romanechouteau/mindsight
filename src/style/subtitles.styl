#subtitles
    opacity 0
    position fixed
    top: 0
    left 0
    right: 0
    z-index 100
    transition: opacity 0.3s linear

    &.visible
        opacity 1

    .inner
        margin: auto
        width: 30vw
        color white
        opacity 0
        font-family: 'Lato', sans-serif
        font-size: 0.875rem
        text-shadow: #00000044 0 0 4px
        transition: opacity 0.3s linear
        position: relative
        z-index 200
        padding 10px
        line-height: 22px
        text-align: center

        &.visible
            opacity 1

