#sumup
    pointer-events: none

    .bg-wrapper
        display: none

    .dataWrapper
        position: absolute
        top: 50%
        left: 50%
        color: white
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
        border-radius: 50%
        overflow: hidden
        transform: translate(-50%, -50%)

        .data
            position: absolute
            top: 50%
            left: 50%
            min-width: 100%
            transform: translate(-50%, -50%)

            .about-link
                pointer-events: all
                text-align: center
                margin-top: 40px
                font-family: 'Lato', sans-serif

                a
                    padding: 14px 30px
                    font-size: 0.875rem
                    color: white
                    text-decoration: none
                    text-transform: uppercase
                    position relative
                    text-shadow: white 0 0 4px

                    &::before
                        box-shadow: white 0 0 4px
                        content: ''
                        width: 100%
                        position absolute
                        top: 0
                        left 0
                        height: 1px
                        background-color: white
                    &::after
                        box-shadow: white 0 0 4px
                        content: ''
                        width: 100%
                        position absolute
                        top: 100%
                        left 0
                        height: 1px
                        background-color: white

            .title
                font-family: 'Lato', sans-serif
                text-transform: uppercase
                font-size: 0.7rem
                text-align: center
                margin-bottom: 0.25rem
                filter: drop-shadow(0 0 3px white)

            .word
                font-family: 'Displace'
                font-size: 5.938rem
                text-transform: uppercase
                text-align: center
                filter: drop-shadow(0 0 3px white)

            .moods
                font-family: 'Lato', sans-serif
                text-transform: uppercase
                font-size: 0.7rem
                display: flex
                flex-direction: row
                justify-content: center
                align-items: center

                .mood
                    padding: 0.2rem 0.7rem
                    opacity: 0.6
                    pointer-events: all
                    cursor: default
                    transition: opacity 0.5s ease, filter 0.5s ease

                    &:hover
                        opacity: 1
                        filter: drop-shadow(0 0 3px white)

    svg
        pointer-events: none

        & > g:not('.particles')
            will-change: transform

        & mask circle
            will-change: transform

            &.innerEyeWhite
                fill: white
                filter: none

        .particle
            fill: white
            filter: none
            opacity: 0.3