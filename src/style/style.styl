@font-face {
 font-family: "Displace";
 src: url("../fonts/Displace20-Regular.ttf") format("truetype");
}

*, *::before, *::after
    box-sizing: border-box

body, html
    margin: 0
    padding: 0
    overflow: hidden

    #pointerCursor
        position absolute
        pointer-events: none
        top 0
        left: 0
        transform: rotate(-90deg)
        transition: opacity 0.5s ease

        circle
            filter: drop-shadow( 0 0 3px white)

        &.hidden
            opacity: 0

    #fade
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: white
        opacity: 0
        display: none
