body, html
    margin: 0
    padding: 0

    .brushInterface
        position: absolute
        left: 0
        bottom: 0
        padding: 16px
        user-select: none
        color: white
        display: flex
        flex-direction: row

        .paramsGroup
            display: flex
            flex-direction: column

            .inputGroup
                display: flex
                flex-direction: row
                align-items: center
                padding: 8px
                display: flex
                flex-direction: row
                justify-content: space-between

                label, .label
                    margin-right: 8px

                input[type="range"]
                    -webkit-appearance: none
                    box-sizing: border-box
                    outline: none
                    padding: 0
                    font: inherit
                    cursor: pointer
                    background-color: transparent
                    background-image: linear-gradient(to right, #FFF, #FFF)
                    background-size: 100% 5%
                    background-repeat: no-repeat
                    background-position: center

                    &::-webkit-slider-runnable-track
                        height: 100%
                        border: none
                        border-radius: 0
                        background-color: transparent

                    &::-moz-range-track
                        height: 100%
                        border: none
                        border-radius: 0
                        background-color: transparent

                    &::-ms-track
                        height: 100%
                        border: none
                        border-radius: 0
                        color: transparent
                        background-color: transparent

                    &::-webkit-slider-thumb
                        -webkit-appearance: none
                        width: 8px
                        height: 8px
                        border: none
                        border-radius: 4px
                        background-color: white

                    &::-moz-range-thumb
                        width: 8px
                        height: 8px
                        border: none
                        border-radius: 4px
                        background-color: white

                    &::-ms-thumb
                        width: 8px
                        height: 8px
                        border: none
                        border-radius: 4px
                        background-color: white

                    &::-moz-range-progress
                        height: 0
                        background: transparent

                    &::-ms-tooltip
                        display: none

                    &::-ms-fill-lower
                        background: transparent

                    &::-ms-fill-upper
                        background: transparent

                &.colorGroup
                    height: 100%
                    position: relative

                    input
                        position: absolute
                        width: 120px
                        right: -55px
                        top: 32px
                        background-color: transparent
                        background-image: linear-gradient(to right, #0000FF, #00FF00, #FF0000)
                        background-size: 100% 25%
                        background-repeat: no-repeat
                        background-position: center
                        transform: rotate(-90deg)

                        &::-webkit-slider-thumb
                            height: 16px
                            width: 2px
                            border-radius: 0

                        &::-moz-range-thumb
                            height: 16px
                            width: 2px
                            border-radius: 0

                        &::-ms-thumb
                            height: 16px
                            width: 2px
                            border-radius: 0

